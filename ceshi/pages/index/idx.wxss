/* pages/index/idx.wxss */
page{
  background-color: #F2F2F2;
}
.slide-image{
  width: 100%;
}
.slide-txt{
  position:absolute;color:#fff;top:110px;text-align:center;display:block;min-width:150px;height:16px;overflow:hidden;font-size:14px;line-height:16px;background:rgba(54,54,54,0.6);border-radius:10px;
}

.idx-search{
  width:100%;
  position:relative;
  margin:5px 0px;
  background-color:#fff;
  height:38px;
  text-align:left;
  display:flex;
}
.idx-search input{
  width:99%;
  padding:5px;
  border:1px solid #CCC;
  height:30px;
  line-height:30px;
  color:#ED0385;
}
.idx-search icon{
  position:absolute;
  top:10px;
  right:10px;
}

.view-loop{
  display:flex;
  align-items:center;
  width:100%;
  height:90px;
  background-color:#fff;
  margin-bottom:1px;
}
.view-loop image{
  border-radius:5%;width:90px;height:70px;margin:10px;
}
.view-loop .title{
  font-size:14px;display:block;color:#333;height:30px;line-height:30px;width:200px;
  text-overflow:ellipsis; white-space:nowrap; overflow:hidden;
}
.view-loop .desc{
  font-size:10px;display:block;color:#999;width:99%;height:30px;overflow:hidden;text-overflow:ellipsis;
}