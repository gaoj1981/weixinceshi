/* pages/ceshi/detail.wxss */
image{width: 100%;}
.animation-element {
  background-color: rgba(0, 0, 0, 0.3);
  border-bottom-right-radius: 5px;
  border-top-right-radius: 5px;
  color: #fff;
  font-size: 17px;
  left: 0;
  letter-spacing: 0.1em;
  line-height: 30px;
  max-width: 90%;
  padding: 10px;
  position: absolute;
  top: 80px;
  z-index: 10;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.panel{
  border: 1px solid #ED0385;
  border-radius: 4px;
}
.panel-heading {
    padding: 10px 15px;
    background-color: #ED0385;
    border-bottom: 1px solid transparent;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    color: #FFFFFF;
}
.panel-body {
    padding: 15px;
}
.txt-view{
  margin: 18px 0px;
  min-height: 1px;
  padding-right: 15px;
  padding-left: 15px;
}
.txt-des{
  color: #555;
}
.btn-success {
    background-color: #ED0385;
    border-color: #ED0385;
    color: #ffffff;
}
.view-progress{padding: 15px;}
.view-progress progress{
  height: 20px;
  border-radius: 4px;
}
.view2-txt{
  font-size: 16px;
  color: inherit;
}
.btn-seltest{
  margin: 10px 0px;
}

.pingHead{width:100%;text-align:center;font-weight:bold;margin:30px 0px 10px 0px;}
.pingHead text{border-bottom:2px solid #ED0385;color:#666;}

.pingLoop{display:flex;width:96%;margin:0 auto;border-bottom:1px solid #f2f2f2;font-size:12px;}
.pingLoop .pingLeft{width:15%;padding:10px;}
.pingLoop .pingLeft image{border-radius:50%;}
.pingLoop .pingRight{width:88%;padding:10px;color:#666;}
.pingRight .pingTime{display:block;color:#999;font-size:12px;}
.pingRight .pingNote{display:block;margin-top:5px;}
.pingRight .resNote{display:block;margin-top:5px;background-color:#f2f2f2;padding:5px;}

.pingMore{width:96%;margin:0 auto;}
.pingMore button{font-size:14px;margin-bottom:10px;}