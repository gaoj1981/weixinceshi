page{
  margin: 0 auto;
  text-align: center;
  font-size: 16px;
}
.btn-group{width:100%;margin-top:10px;display: flex;}
.btn-group view{width:50%;padding: 2px;}
.btn-group button{font-size: 14px;height:30px;line-height:30px;padding-left:15px;padding-right:15px;}

.test-reswait{position:absolute;top:45%;left:46%;width:20px;height:20px;background-color:#ED0385;border-radius: 50%;}
.reswaiting{position:absolute;top:50%;width:100%;text-align:center;color:#ED0385;}

.test-result{width:95%;margin:0 auto;}
.testres-title{width:100%;text-align:center;background-color:#ED0385;height:30px;line-height:30px;color:#fff;font-size:14px;}

.testres-img{width:100%;height:170px;}
.testres-imgleft{width:30%;float:left;display:flex;align-items:center;height:170px;}
.testres-imgleft image{border-radius: 50%;margin:5px;float:left;width:100px;height:100px;}
.testres-imgright{width:70%;float:right;display:flex;align-items:center;height:170px;}
.testres-imgright text{
  display:block;font-weight:bold;color:red;text-align:left;margin:5px;padding:10px;
  background-color:rgba(242,242,242,0.8);border-radius:5%;
}

.testres-note{width:100%;text-align:left;background-color:#F2F2F2;min-height:200px;line-height:24px;}
.testres-note text{display:block;font-size:14px;font-style:italic;letter-spacing:1px;padding:5px;color:#333;}

.testres-qr{width:100%;position:relative;background-color:#FFD92C;height:80px;}
.testres-qr image{width:60px;height:60px;position:absolute;top:10px;left:20px;}
.testres-qrtname{display:block;position:absolute;font-size:14px;color:#FF3333;top:20px;left:90px;}
.testres-qrview{display:block;position:absolute;font-size:10px;color:#FFF;top:50px;left:90px;background-color:#000;padding:0px 2px;}
.testres-qrceshi{display:block;position:absolute;font-size:10px;top:50px;right:2%;}
.testres-share{position:absolute;top:45px;right:10px;text-align:center;font-size:14px;height:25px;line-height:25px;background-color:rgba(36,36,36,0.6);color:#FFF;padding:0px 8px;}

.test-tuijian{width:95%;margin:0 auto;margin-top:18px;margin-bottom:18px;}

.test-tuijian .headtitle{width:100%;text-align: center;background-color:#ED0385;color: #FFF; }
.test-tuijian .headtitle text{display:block;height:40px;line-height:40px;font-size:16px;}

.test-tuijian .list{width:100%;background-color: #F2F2F2;text-align:left;}
.test-tuijian .list .view-loop{
  display:flex;
  align-items:center;
  width:100%;
  height:90px;
  background-color:#fff;
  margin-bottom:1px;
}
.view-loop image{
  border-radius:5%;width:90px;height:70px;margin:10px;
}
.view-loop .title{
  font-size:14px;display:block;color:#333;height:30px;line-height:30px;width:200px;
  text-overflow:ellipsis; white-space:nowrap; overflow:hidden;
}
.view-loop .desc{
  font-size:10px;display:block;color:#999;width:99%;height:40px;overflow:hidden;text-overflow:ellipsis;
}
