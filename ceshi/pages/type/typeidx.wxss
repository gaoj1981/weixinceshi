/* pages/type/typeidx.wxss */
.tab{  
    display: flex;  
    flex-direction: row;  
}  
.tab-left{  
    width: 60px;  
    line-height: 160%;  
    border-right: solid 1px gray;
    background-color: #EFEFEF;
    color: #333;
    font-size: 14px;
    text-align: center;
}  
.tab-left view{
    height: 50px;
    line-height: 50px;
}  
.tab-left .active{  
    color: #000;
    font-weight: bold;
    font-size: 16px;
    background-color: #FEFEFE;
    border-left:2px solid #ED0385;
}  
.tab-right{  
    line-height: 160%;  
}  
.tab-right .right-item{  
    padding-left: 15rpx;
    display: none;
}  
.tab-right .right-item.active{  
    display: block;  
}


.view-loop{
  display:flex;
  align-items:center;
  width:100%;
  height:90px;
  background-color:#fff;
  margin-bottom:1px;
}
.view-loop image{
  border-radius:5%;width:90px;height:70px;margin:10px;
}
.view-loop .title{
  font-size:14px;display:block;color:#333;height:30px;line-height:30px;
  text-overflow:ellipsis; white-space:nowrap; overflow:hidden;
}
.view-loop .desc{
  font-size:10px;display:block;color:#999;width:99%;height:30px;line-height:15px;overflow:hidden;
}